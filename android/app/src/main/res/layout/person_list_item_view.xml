<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/indent_half"
    android:layout_marginBottom="@dimen/indent_half"
    android:orientation="vertical"
    android:background="@color/background"
    tools:ignore="RtlHardcoded"
    >

    <ru.maksimbulva.ui.person.PersonCardView
        android:id="@+id/person_list_item_person_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/person_list_item_check"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/person_list_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/indent"
        app:layout_constraintLeft_toRightOf="@id/person_list_item_person_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_check_24"
        android:contentDescription="@null"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
