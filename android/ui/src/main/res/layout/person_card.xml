<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    >

    <ImageView
        android:id="@+id/person_card_portrait"
        android:layout_width="@dimen/person_card_portrait_size"
        android:layout_height="@dimen/person_card_portrait_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/darker_gray"
        android:contentDescription="@null"
        />

    <TextView
        android:id="@+id/person_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/edge_margin"
        android:layout_marginRight="@dimen/edge_margin"
        android:layout_marginTop="@dimen/indent_half"
        app:layout_constraintLeft_toRightOf="@id/person_card_portrait"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextTitle"
        tools:text="Alice"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
